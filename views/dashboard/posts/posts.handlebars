<div style="display: flex;">
    <a href="/api/dashboard" style="width: 5em">
        <button class="btn btn-primary">
            Back
        </button>
    </a>

    <h2>Posts list</h2>
</div>

<hr>

<a href="/api/dashboard/posts/add">
    <button class="btn btn-success">
        New post
    </button>
</a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>Description: {{description}}</p>
            <small>Category: {{category.name}}</small>
            <br>
            <small>Created in: {{dateFormat date}}</small>
            <br>

            <a href="/api/dashboard/posts/edit/{{_id}}">
                <button class="btn btn-warning mt-4">Edit</button>
            </a>
            
            <form action="/api/dashboard/posts/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">No categories registred!</h4>
{{/each}}