<div style="display: flex;">
    <a href="/dashboard" style="width: 5em">
        <button class="btn btn-primary">
            Back
        </button>
    </a>

    <h2>Posts list</h2>
</div>

<hr>

<a href="/dashboard/posts/add">
    <button class="btn btn-success">
        New post
    </button>
</a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>Description: {{description}}</p>
            <small>Category: {{category.name}}</small>
            <br>
            <small>Created in: {{dateFormat date}}</small>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">No categories registred!</h4>
{{/each}}