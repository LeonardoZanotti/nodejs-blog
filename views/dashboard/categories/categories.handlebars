<div style="display: flex;">
    <a href="/dashboard" style="width: 5em">
        <button class="btn btn-primary">
            Back
        </button>
    </a>

    <h2>Categories list</h2>
</div>

<hr>

<a href="/dashboard/categories/add">
    <button class="btn btn-success">
        New category
    </button>
</a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Id: {{_id}}</small>
            <br>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Created in: {{dateFormat date}}</small>
            <br>
            
            <a href="/dashboard/categories/edit/{{_id}}">
                <btn class="btn btn-warning mt-4">Edit</btn>
            </a>

            <form action="/dashboard/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">No categories registred!</h4>
{{/each}}