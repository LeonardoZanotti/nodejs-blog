{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div style="display: flex;">
    <a href="/dashboard/categories" style="width: 5em">
        <button class="btn btn-primary">
            Back
        </button>
    </a>

    <h2>New category</h2>
</div>

<div class="card">
    <div class="card-body">
        <form action="/dashboard/categories/new" method="POST">
            <div class="form-field">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="{{category.name}}" placeholder="Name" class="form-control" required>
            </div>
            <br>

            <div class="form-field">
                <label for="slug">Slug:</label>
                <input type="text" id="slug" name="slug" value="{{category.slug}}" placeholder="Slug" class="form-control" required>
            </div>
            <br>

            <button type="submit" class="btn btn-success">Create category</button>
        </form>
    </div>
</div>