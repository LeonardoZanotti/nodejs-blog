<h2>{{category.name}}</h2>
<hr>
{{#each posts}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <a href="/api/posts/{{slug}}">
                <button class="btn btn-success">Read more</button>
            </a>
            <hr>
            <small>Category: {{category.name}}</small>
            <br>
            <small>Published in: {{ dateFormat date}}</small>
        </div>
    </div>
{{else}}
    <h4>No posts found</h4>
{{/each}}