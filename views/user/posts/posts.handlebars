<div class="jumbotron">
    <h1 class="display-4">NodeJS Blog!</h1>
    <p class="lead">This is a simple nodejs blog to learn.</p>
    <hr class="my-4">
    <a href="https://github.com/LeonardoZanotti/nodejs-blog">
        <p>See it on GitHub</p>
    </a>
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Create account</a>
    </p>
</div>

<hr>

<h2>Recent posts:</h2>

{{#each posts}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <a href="/api/posts/{{slug}}">
                <button class="btn btn-success">Read more</button>
            </a>
            <hr>
            <small>Category: {{category.name}}</small>
            <br>
            <small>Published in: {{ dateFormat date}}</small>
        </div>
    </div>
{{else}}
    <h4>No posts found</h4>
{{/each}}